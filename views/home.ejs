<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1">
    <link rel="stylesheet" href="css/home.css">
    <link rel="stylesheet" href="css/global.css">
    <link rel="stylesheet" href="css/partials/navbar.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Livvic:ital,wght@0,100;0,300;0,600;1,100&family=Montserrat:wght@900&family=Open+Sans:ital,wght@0,400;0,700;1,400&display=swap" rel="stylesheet">
    
    <title>Document</title>
</head>
<body>
    <%- include('./partials/navbar.ejs') %>
    <section class="post-session">
        <div class="container">
            <div class="header-post">
                <header>
                    <h2> Recentes </h2>
                </header>
            </div>
            <div class="posts">
                <% posts.forEach(post => { %>
                <a href="/post/<%- post.slug %>">
                <div class="post">
                    <div class="post-img">
                        <img src="imgs/post-padrao.jpg" alt="" height="100%" width="500px">
                    </div>
                    <div class="post-title">
                        <h2><%- post.title %></h2>
                    </div>
                </div>
            </a>
                <% }); %>
                
            </div>
        </div>
    </section>
     
















    <script src="js/mobile-navbar.js"></script>
    </body>
</html>