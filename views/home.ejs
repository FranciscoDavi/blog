<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1">
    <link rel="stylesheet" href="css/home.css">
    <link rel="stylesheet" href="css/global.css">
    <link rel="stylesheet" href="css/partials/navbar.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Livvic:ital,wght@0,100;0,300;0,600;1,100&family=Montserrat:wght@900&family=Open+Sans:ital,wght@0,400;0,700;1,400&display=swap" rel="stylesheet">
    
    <title>Document</title>
</head>
<body>
    <%- include('./partials/navbar.ejs') %>
    <div id="modal-login" class="modal">       
        <div class="modal-content">
            <span class="close">&times;</span>
            <h1>Login</h1>     
            <form action="/login" method="POST" class="login-form">
                <input type="text" name="username" id="username" placeholder="Nome de Usuario">
                <input type="password" name="password" id="password" placeholder="Senha">
                <button type="submit">Entrar</button>         
                <a href="#">Esqueci minha senha.</a>
                <p>Não possui conta? <a href="/register">Registre-se.</a></p>
            </form>       
        </div>  
    </div>

    <div id="modal-register" class="modal">       
        <div class="modal-content modal-register">
            <span class="close">&times;</span>
            <h1>Register</h1>
            <form action="/register" method="POST" class="register-form">
                <div>
                    <input type="text" name="firstname" class="nameput" id="firstname" placeholder="Nome">
                    <input type="text" name="lastname" class="nameput" id="lastname" placeholder="Sobrenome">
                </div>
                
                <input type="text" name="username"  placeholder="Nome de Usuario">
                <input type="email" name="email" id="email" placeholder="exemplo@email.com">
                <input type="date" name="dat" id="dat">
                <input type="password" name="password"  placeholder="Senha">
                <input type="password" name="confirmPassword" id="confirmPassword" placeholder="Confirmar Senha">
                <div>
                    <input type="checkbox" value="true"><a>Li e Concordo com os termos e condições</a>
                </div>
                <button type="submit" class="register-button"> Entrar</button>
            </form>
        </div>  
    </div>

    
    <div class="banner">
      
    </div>

    <div class="container">
        <main id="#posts">
            <header>
                <h2>Postagens</h2>
            </header>
            <% posts.forEach(post => { %>
            <div class="card-post">
                <div class="card-img">
                    <img src="imgs/banner-temp.png" alt="banner-temporario">
                </div>
                <div class="card-info">
                    <div>
                        <h2><%- post.title %> </h2>
                        <p>Breve descrição do post</p>
                    </div>
                    <div>
                        <span>26/10/2023</span>
                    </div>
                </div>
            </div>
            <% }); %> 
        </main>
    </div> 
    <div class="mais-posts">
        <a href="#posts"><button>Ver mais</button></a>
    </div>
    
    <footer>
        <div class="footer-itens">
            <div class="social-links">
                <img src="/imgs/icon-git.svg">
                <a href="https://github.com/FranciscoDavi">Github</a>
            </div>
            <div class="social-links">
                <img src="/imgs/icon-linkedin.svg">
                <a href="https://www.linkedin.com/in/francisco-davi-92053419b/">Linkedin</a>
            </div>
            <div class="social-links">
                <p>Projeto para portifólio</p>
                <p>by Chico</p>
            </div>
        </div>
    </footer>
    <script src="js/mobile-navbar.js"></script>
    <script>
        let modal_login = document.getElementById("modal-login");
        let modal_register = document.getElementById("modal-register");

        let btn_login = document.getElementById("btn-login");
        let btn_register = document.getElementById("btn-register");

        let span = document.querySelector(".close");

        span.onclick = () => {
            modal_login.style.display = "none";
        }

        openModal(modal_login, btn_login);

        openModal(modal_register, btn_register);

        function openModal(modal, btn){
            btn.onclick = () => {
                modal.style.display = "block";
            }

            window.onclick = (event) => {
                if(event.target == modal){
                    modal.style.display = "none";
                }
            }
        }



